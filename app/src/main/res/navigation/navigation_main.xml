<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/meals_dest">

    <fragment
        android:id="@+id/meals_dest"
        android:name="com.onit.digest.MealsFragment"
        android:label="@string/meals"
        tools:layout="@layout/fragment_meals">
        <action
            android:id="@+id/edit_meal_action"
            app:destination="@id/editMealFragment">
            <argument
                android:name="selectedMeal"
                android:defaultValue="@null"
                app:argType="com.onit.digest.model.MealWithIngredients"
                app:nullable="true" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/editMealFragment"
        android:name="com.onit.digest.EditMealFragment">

        <argument
            android:name="selectedMeal"
            android:defaultValue="@null"
            app:argType="com.onit.digest.model.MealWithIngredients"
            app:nullable="true" />
    </fragment>
</navigation>